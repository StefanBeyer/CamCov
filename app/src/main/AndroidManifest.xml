<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ryey.camcov">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".OverlayService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name="ryey.camcov.CamTileService"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/cam_tile_label"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <receiver
            android:name=".TriggerReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="ryey.camcov.action.START_OVERLAY" />
                <action android:name="ryey.camcov.action.STOP_OVERLAY" />
                <action android:name="ryey.camcov.action.TOGGLE_OVERLAY" />
            </intent-filter>
        </receiver>
    </application>

</manifest>